<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1" metadata-complete="false">
	<display-name>Webapp 2</display-name>
	<description> Webapp 2</description>

	<listener>
		<listener-class>hr.fer.oprpp2.hw04.listeners.WebAppListener</listener-class>
	</listener>


	<servlet>
		<servlet-name>ColorServlet</servlet-name>
		<servlet-class>hr.fer.oprpp2.hw04.servlet.ColorServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>TrigonometricServlet</servlet-name>
		<servlet-class>hr.fer.oprpp2.hw04.servlet.TrigonometricServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ChartServlet</servlet-name>
		<servlet-class>hr.fer.oprpp2.hw04.servlet.ChartServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ExcelServlet</servlet-name>
		<servlet-class>hr.fer.oprpp2.hw04.servlet.ExcelServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GlasanjeServlet</servlet-name>
		<servlet-class>hr.fer.oprpp2.hw04.servlet.GlasanjeServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GlasanjeGlasajServlet</servlet-name>
		<servlet-class>hr.fer.oprpp2.hw04.servlet.GlasanjeGlasajServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GlasanjeRezultatiServlet</servlet-name>
		<servlet-class>hr.fer.oprpp2.hw04.servlet.GlasanjeRezultatiServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GlasanjeChartServlet</servlet-name>
		<servlet-class>hr.fer.oprpp2.hw04.servlet.GlasanjeChartServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GlasanjeExcelServlet</servlet-name>
		<servlet-class>hr.fer.oprpp2.hw04.servlet.GlasanjeExcelServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ColorServlet</servlet-name>
		<url-pattern>/setcolor</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>TrigonometricServlet</servlet-name>
		<url-pattern>/trigonometric</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ChartServlet</servlet-name>
		<url-pattern>/reportImage</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ExcelServlet</servlet-name>
		<url-pattern>/powers</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GlasanjeServlet</servlet-name>
		<url-pattern>/glasanje</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GlasanjeGlasajServlet</servlet-name>
		<url-pattern>/glasanje-glasaj</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GlasanjeRezultatiServlet</servlet-name>
		<url-pattern>/glasanje-rezultati</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GlasanjeChartServlet</servlet-name>
		<url-pattern>/glasanje-grafika</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GlasanjeExcelServlet</servlet-name>
		<url-pattern>/glasanje-xls</url-pattern>
	</servlet-mapping>

</web-app>